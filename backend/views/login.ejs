<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen flex-col">
    <% if (message) { %>
        <div id="alert-box" class="mt-4 text-center px-4 py-2 rounded-lg text-white
            <% if (type === 'success') { %> bg-green-500 <% } else { %> bg-red-500 <% } %>">
            <%= message %>
        </div>
        <br>
    <% } %>

    <div class="bg-white p-8 shadow-lg rounded-lg w-96">
        <h1 class="text-2xl font-bold text-gray-800 text-center">Login</h1>
        <form action="/login" method="POST" class="mt-4">
            <!-- Role Selection -->
            <label class="block mb-2 font-semibold text-gray-700">Login as:</label>
            <select name="role" id="role" onchange="toggleSecurityCode()" 
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-blue-400">
                <option value="user">User</option>
                <option value="admin">Admin</option>
            </select>

            <!-- Username Input -->
            <input type="text" name="username" placeholder="Username or Email" required 
                class="w-full mt-3 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-blue-400">

            <!-- Password Input -->
            <input type="password" name="password" placeholder="Password" required 
                class="w-full mt-3 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-blue-400">

            <!-- Security Code (Only for Admins) -->
            <div id="security-code-container" class="hidden">
                <input type="password" name="security_code" placeholder="Enter Security Code" 
                    class="w-full mt-3 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-red-400">
            </div>

            <!-- Submit Button -->
            <button type="submit" 
                class="w-full mt-4 bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600">Login</button>
        </form>

        <div class="text-center mt-4">
            <a href="/register" class="text-blue-500 hover:underline">Don't have an account? Register</a>
        </div>
    </div>

    <script>
        // Fade out the message after 3 seconds 
        setTimeout(() => {
            let alertBox = document.getElementById("alert-box");
            if (alertBox) {
                alertBox.style.transition = "opacity 1s";
                alertBox.style.opacity = "0";
                setTimeout(() => alertBox.remove(), 1000);
            }
        }, 3000);

        // Show/hide security code input based on selection
        function toggleSecurityCode() {
            let role = document.getElementById("role").value;
            let securityCodeContainer = document.getElementById("security-code-container");
            if (role === "admin") {
                securityCodeContainer.classList.remove("hidden");
            } else {
                securityCodeContainer.classList.add("hidden");
            }
        }
    </script>
</body>
</html>
